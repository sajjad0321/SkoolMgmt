@model SkoolMgmt.Models.StudentModel
@{
    ViewBag.Title = "Student";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title>@ViewBag.Title | Admin</title>
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="col-md-6">
        @using (Html.BeginForm("AdmitStudent", "Admin", FormMethod.Post, new { @class = "box box-primary", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title"><span class="fa fa-plus-circle"></span> Admission Form</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.EnrollmentNum, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.EnrollmentNum, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.EnrollmentNum)
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.FatherName, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.FatherName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FatherName)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.FatherCNIC, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.FatherCNIC, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FatherCNIC)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.FatherOcc, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.FatherOcc, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FatherOcc)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Gender, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Gender)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.DOB, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.DOB, new { @class = "form-control hasDatepicker" })
                        @Html.ValidationMessageFor(m => m.DOB)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary " value="Register" />
                    </div>

                </div>
                <!-- /.box-body -->
            </div>
        }
    </div>
</section>
<!-- /.content -->